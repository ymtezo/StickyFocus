<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stickyfocus">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- SYSTEM_ALERT_WINDOW is granted via Settings screen, not manifest -->

    <application
        android:allowBackup="true"
        android:label="StickyFocus"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity android:name="com.example.stickyfocus.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.stickyfocus.UnlockMonitorService"
            android:exported="false" />

        <service
            android:name="com.example.stickyfocus.OverlayService"
            android:exported="false" />

        <receiver android:name="com.example.stickyfocus.BootReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
